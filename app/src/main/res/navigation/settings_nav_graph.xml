<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_nav_graph"
    app:startDestination="@id/mainSettingsFragment">

    <fragment
        android:id="@+id/mainSettingsFragment"
        android:name="bobko.email.todo.settings.MainSettingsFragment"
        android:label="MainSettingsFragment">
        <action
            android:id="@+id/action_mainSettingsFragment_to_addAccountSettingsWizardFragment"
            app:destination="@id/addAccountSettingsWizardFragment" />
        <action
            android:id="@+id/action_mainSettingsFragment_to_addAccountSettingsFragmentDialog"
            app:destination="@id/editAccountSettingsFragmentDialog" />
        <action
            android:id="@+id/action_mainSettingsFragment_to_textPrefillSettingsFragment"
            app:destination="@id/textPrefillSettingsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <dialog
        android:id="@+id/editAccountSettingsFragmentDialog"
        android:name="bobko.email.todo.settings.EditAccountSettingsFragment"
        android:label="EditAccountSettingsFragment" />
    <dialog
        android:id="@+id/addAccountSettingsWizardFragment"
        android:name="bobko.email.todo.settings.AddAccountSettingsWizardFragment"
        android:label="AddAccountSettingsWizardFragment" >
        <action
            android:id="@+id/action_addAccountSettingsWizardFragment_to_addAccountSettingsFragmentDialog"
            app:destination="@id/editAccountSettingsFragmentDialog"
            app:popUpTo="@id/mainSettingsFragment" />
    </dialog>
    <fragment
        android:id="@+id/textPrefillSettingsFragment"
        android:name="bobko.email.todo.settings.TextPrefillSettingsFragment"
        android:label="TextPrefillSettingsFragment" />
</navigation>
